{{#partial "content"}}

    {{#if username }}

        <div class="jumbotron bg-none hero">
            <div class="container">
                <h1 class="display-4">Wildlife Tracker</h1>
                <p>
                    Never apologize for being over sensitive and emotional when defending the welfare of wildlife.
                    Let this be a sign that you have a big heart and aren't afraid to show your true feelings.

                    These emotions give you the strength to fight for what is right and to be the voice of those who cannot be heard.
                    <br>
                    Extinction means forever.
                </p>

            </div>
        </div>
        <div class="btn-group d-flex justify-content-center">
            <a href="sightings/new" class="btn btn-dark">New Sighting</a>
            <a href="/sightings" class="btn btn-dark">View Sightings</a>
        </div>

    {{else }}
        <div class="card" style="max-width: 480px">
            <div class="card-header">
                <p class="card-header-title">
                    Login
                </p>
            </div>
            <div class="card-body">
                <form action="/login" method="post" class="form-inline">

                    <div class="form-group mx-sm-3 mb-2">
                        <label for="username" class="sr-only">Username</label>
                        <input type="text" id="username" name="username" class="form-control" placeholder="Username">
                    </div>
                    <button type="submit" class="btn btn-dark mx-sm-3 mb-2">Start Protecting</button>
                </form>

            </div>

        </div>
    {{/if }}
{{/partial }}

{{> layout.hbs}}